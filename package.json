{
  "name": "enterprise-hr-portal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:api": "tsx watch api/index.ts",
    "build:api": "tsc -p tsconfig.api.json",
    "start:api": "node dist/api/index.js",
    "seed": "tsx api/scripts/seed.ts",
    "simulate": "tsx scripts/simulate-hardware.ts",
    "test": "npm run test:api && npm run test:ui",
    "test:api": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "test:api:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --watch",
    "test:api:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --coverage",
    "test:ui": "vitest run",
    "test:ui:watch": "vitest",
    "test:ui:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "npm run test:api:coverage && npm run test:ui:coverage",
    "playwright:install": "playwright install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "expo": "^54.0.30",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.562.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.13.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-native-web": "^0.21.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/archiver": "^7.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.14.0",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.50.1",
    "vite": "^6.2.0",
    "vitest": "^4.0.16"
  }
}
