# ============================================================================
# Enterprise HR Portal - Environment Configuration
# Copy this file to .env and fill in the values
# ============================================================================

# =========================
# REQUIRED IN PRODUCTION
# =========================

# Database Connection (Supabase PostgreSQL or Docker)
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/hr_portal

# JWT Authentication Secret (MUST be at least 32 characters in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-production-jwt-secret-min-32-chars

# =========================
# OPTIONAL CONFIGURATION
# =========================

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:5173

# PDF Generation
PDF_OWNER_PASSWORD=your-secure-pdf-owner-password

# Development Only - Fallback password for seeded users without password_hash
# This is IGNORED in production (NODE_ENV=production)
DEV_PASSWORD=password123

# Default role for users without a role column value
DEFAULT_ROLE=WORKER

# =========================
# DATABASE CONFIGURATION
# (Alternative to DATABASE_URL)
# =========================

# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=postgres123
# PGDATABASE=hr_portal
# PGSSLMODE=disable

# =========================
# CONNECTION POOL SETTINGS
# =========================

# PGPOOL_MAX=20
# PGPOOL_IDLE=30000
# PGPOOL_TIMEOUT=2000
